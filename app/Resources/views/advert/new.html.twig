{% extends 'base.html.twig' %}

{% block body %}
    <h1>Créer une nouvelle annonce</h1>
    <p class="redText">Votre pseudo et votre email (renseignés lors de votre inscription) seront automatiquement ajouté
        à votre annonce</p>
    <hr/>
    {{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_row(form.category) }}
    {{ form_row(form.Title) }}
    {{ form_row(form.Content) }}
    {{ form_row(form.Price) }}
    {{ form_row(form.department) }}
    {{ form_row(form.city) }}
    {{ form_row(form.postalCode) }}
    {{ form_row(form.Tel) }}
    {{ form_row(form.image) }}
    {% if (is_granted('ROLE_ADMIN')) %}
        <hr/>
        {{ form_row(form.published) }}
        <hr/>
    {% else %}
        <div class="published">
            {{ form_row(form.published) }}
        </div>
    {% endif %}
    <input class="btn btn-primary" type="submit" value="Ajouter votre annonce"/>

    {{ form_end(form) }}
<hr />
    <ul>
        <li>
            <a href="{{ path('advert_index') }}">Retour à la liste</a>
        </li>
    </ul>

{% endblock %}
